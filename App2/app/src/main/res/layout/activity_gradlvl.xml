<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gradlvl">

    <TextView
        android:id="@+id/lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="65dp"
        android:textSize="20dp"
        android:padding="5dp"
        android:text="Graduate or Undergraduate?" />

    <RadioGroup
        android:id="@+id/gradLvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lvl">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:id="@+id/ug"
            android:text="Undergraduate"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:id="@+id/g"
            android:text="Graduate"
            android:onClick="grad"/>
    </RadioGroup>

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gradLvl"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="#B5AEC4"
        android:layout_marginLeft="50dp"
        android:onClick="onClickG"
        android:text="Back"/>

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gradLvl"
        android:layout_toRightOf="@id/Back"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="#B5AEC4"
        android:layout_marginLeft="150dp"
        android:onClick="onClickG"
        android:text="Next"/>
</RelativeLayout>